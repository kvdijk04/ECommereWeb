@model OnlineMarket.ModelViews.MuaHangSuccessVM

@{
    ViewData["Title"] = "Success";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" />
<div class="col-xl-6 col-lg-7 align-self-center">
    <div class="about-banner-content">
        <div class="section-title">
            <h2 class="sub-title" style="font-size:25px;">Thông tin đơn hàng</h2>
            <strong style="font-size:25px;">Cảm ơn bạn đã đặt hàng</strong>
            <h2 class="title font-size-60 mb-6"></h2>
            <p style="font-size:25px;">Thông tin khách hàng</p>
            <p style="font-size:25px;">Họ và tên: @Model.FullName</p>
            <p style="font-size:25px;">Số điện thoại: @Model.Phone</p>
            <p style="font-size:25px; padding-bottom:30px;">Địa chỉ : @Model.Address, @Model.PhuongXa,@Model.QuanHuyen ,@Model.TinhThanh</p>
            <div class="button-wrap pt-8" style="padding-bottom:30px;">
                <a class="btn btn-custom-size lg-size btn-primary btn-dark-hover rounded-0" href="shop.html">Shop Now</a>
            </div>
        </div>
    </div>
</div>

<style>
    .p{
        margin: 10px 0 20px;
    }

</style>
