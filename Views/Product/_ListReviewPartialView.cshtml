@model  List<OnlineMarket.Models.Comment>


<form>
    
	<div id="review" style="overflow-y:scroll; max-height:400px;">
        <h2>@Model.Count() Review Items</h2>
		<table class="table table-striped table-bordered" itemscope itemtype="https://schema.org/Review">
            
            @if (Model != null && Model.Count() > 0)
            {
				@foreach (var item in Model)
                {		
					<tbody>
                        
							<tr>
								<td style="width: 50%;" itemprop="author"><strong>@item.FullName</strong></td>
								<td class="text-right"itemprop="datePublished">@item.CommentedOn</td>
							</tr>
							<tr>
								<td colspan="2">
									<p itemprop="reviewBody"  >
										@item.CommentDescription                         
									</p>

									<div class="ratings" itemprop="reviewRating" itemscope itemtype="https://schema.org/Rating">
										@if (item.Rating >= 9)
										{
											<div class="rating-box" itemprop="bestRating">
												<span class="fa fa-stack"><i class="fa fa-star fa-stack-1x"></i><i class="fa fa-star-o fa-stack-1x"></i></span>
												<span class="fa fa-stack"><i class="fa fa-star fa-stack-1x"></i><i class="fa fa-star-o fa-stack-1x"></i></span>
												<span class="fa fa-stack"><i class="fa fa-star fa-stack-1x"></i><i class="fa fa-star-o fa-stack-1x"></i></span>
												<span class="fa fa-stack"><i class="fa fa-star fa-stack-1x"></i><i class="fa fa-star-o fa-stack-1x"></i></span>
												<span class="fa fa-stack"><i class="fa fa-star fa-stack-1x"></i><i class="fa fa-star-o fa-stack-1x"></i></span>
											</div>
										}
										@if (item.Rating > 6 && item.Rating <= 8)
										{
											<div class="rating-box" itemprop="bestRating">
												<span class="fa fa-stack"><i class="fa fa-star fa-stack-1x"></i><i class="fa fa-star-o fa-stack-1x"></i></span>
												<span class="fa fa-stack"><i class="fa fa-star fa-stack-1x"></i><i class="fa fa-star-o fa-stack-1x"></i></span>
												<span class="fa fa-stack"><i class="fa fa-star fa-stack-1x"></i><i class="fa fa-star-o fa-stack-1x"></i></span>
												<span class="fa fa-stack"><i class="fa fa-star fa-stack-1x"></i><i class="fa fa-star-o fa-stack-1x"></i></span>
											</div>
										}
										@if (item.Rating >= 5 && item.Rating <= 6)
										{
											<div class="rating-box" itemprop="ratingValue">
												<span class="fa fa-stack"><i class="fa fa-star fa-stack-1x"></i><i class="fa fa-star-o fa-stack-1x"></i></span>
												<span class="fa fa-stack"><i class="fa fa-star fa-stack-1x"></i><i class="fa fa-star-o fa-stack-1x"></i></span>
												<span class="fa fa-stack"><i class="fa fa-star fa-stack-1x"></i><i class="fa fa-star-o fa-stack-1x"></i></span>
											</div>
										}
										@if (item.Rating < 5 && item.Rating >= 3)
										{
											<div class="rating-box" itemprop="ratingValue">
												<span class="fa fa-stack"><i class="fa fa-star fa-stack-1x"></i><i class="fa fa-star-o fa-stack-1x"></i></span>
												<span class="fa fa-stack"><i class="fa fa-star fa-stack-1x"></i><i class="fa fa-star-o fa-stack-1x"></i></span>
											</div>
										}
										@if (item.Rating < 3)
										{
											<div class="rating-box"itemprop="ratingCount">
												<span class="fa fa-stack"><i class="fa fa-star-o fa-stack-1x"></i></span>
											</div>
										}

									</div>
								</td>
							</tr>
					</tbody>
					
				}
            }
		</table>
		<div class="text-right"></div>
	</div>
	<h2 id="review-title">Viết phản hồi</h2>
</form>
<div class="product-review-body">
    <div class="button-wrap mt-8">
        <button type="submit" value="submit" class="buttons clearfix" name="submit"
                onclick="window.location= 'tao-review-moi.html'"
                >Phản hồi
		</button>
    </div>
</div>



