@model OnlineMarket.ModelViews.ChangePasswordViewModel



<fieldset>
	<legend>Thay đổi mật khẩu</legend>
		<form asp-controller="Accounts" asp-action="ChangePassword" method="post">
			<div class="form-group required">
				<label for="input-password" class="control-label">Mật khẩu hiện tại</label>
				<input asp-for="PasswordNow" type="password"  class="form-control" id="input-password" name="PasswordNow">
			</div>
			<div class="form-group required">
				<label for="input-password" class="control-label">Mật khẩu mới</label>
				<input asp-for="Password" type="password"  class="form-control" id="input-password" name="Password">
			</div>
			<div class="form-group required">
				<label for="input-password" class="control-label">Xác nhận mật khẩu mới</label>
				<input asp-for="ConfirmPassword" type="password"  class="form-control" id="input-password" name="ConfirmPassword">
			</div>
			<div class="buttons clearfix">
			<div class="pull-right">
				<button type="submit" class="btn btn-md btn-primary" >Lưu thay đổi</button>
			</div>
		</div>
		</form>
</fieldset>
