@model OnlineMarket.ModelViews.HomeViewVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form asp-action="Create" asp-controller="Home" method="post">
    <div id="container-module-newletter" class="hidden-md hidden-sm hidden-xs">
        <div class="so_newletter_custom_popup_bg popup_bg"></div>
        <div class="module main-newsleter-popup so_newletter_custom_popup so_newletter_oca_popup" id="so_newletter_custom_popup">
            <div class="so-custom-popup so-custom-oca-popup" style="width: 850px; background: url('image/demo/cms/newletter-bg.jpg') no-repeat white;  ">
                <div class="modcontent">
                    <div class="oca_popup" id="test-popup">
                        <div class="popup-content">
                            <p class="newsletter_promo">Khuyến mãi hàng ngày</p>
                            <div class="popup-title">ĐĂNG KÝ ĐỂ NHẬN BẢN TIN				</div>
                            <form method="post" name="signup" class="form-group signup">
                                <div class="input-control">
                                    <div class="email">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                        @*<input type="text" placeholder="Địa chỉ email..." value="" class="form-control" id="txtemail" name="txtemail" asp-for="subcriber.Email">*@
                                        <input asp-for="subcriber.Email" class="form-control" type="email" placeholder="Địa chỉ email..." />
                                        <span asp-validation-for="subcriber.Email" class="text-danger"></span>
                                    </div>
                                    <button class="btn btn-default" type="submit" onclick="" name="submit" id="submit">Đăng ký	</button>
                                </div>
                            </form>
                            <label class="hidden-popup"> <input type="checkbox" value="1" name="hidden-popup"> <span class="inline">&nbsp;&nbsp;Không hiện thông báo này nữa</span> </label>
                        </div>
                    </div>
                </div> <!--/.modcontent-->
                <button title="Close" type="button" class="popup-close" id="close">×</button>
            </div>
        </div>
    </div>
</form>