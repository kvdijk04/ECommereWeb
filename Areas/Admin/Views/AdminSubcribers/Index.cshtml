@model IEnumerable<OnlineMarket.Models.Subcriber>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
        <form method="post" asp-action="Export" asp-controller="AdminSubcribers">
            <input type="submit" value="Xuất file CSV" class="btn btn-primary btn-tone m-r-5" />
        </form>
        <form method="post" asp-action="ExportToExcel" asp-controller="AdminSubcribers">
            <input type="submit" value="Xuất file Excel" class="btn btn-primary btn-tone m-r-5" />
        </form>
        <form method="post" asp-action="ExportText" asp-controller="AdminSubcribers">
            <input type="submit" value="Xuất file .txt" class="btn btn-primary btn-tone m-r-5" />
        </form>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-tone m-r-5">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id"class="btn btn-secondary btn-tone m-r-5">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id"class="btn btn-danger btn-tone m-r-5">Delete</a>
                <a asp-action="XemCTTK"class="btn btn-primary btn-tone m-r-5">Xem tài khoản</a>
            </td>
        </tr>
}
    </tbody>
</table>
